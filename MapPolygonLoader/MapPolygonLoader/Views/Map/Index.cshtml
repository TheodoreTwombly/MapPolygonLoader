@model MapPolygonLoader.ViewModels.UserInputParameters
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <form asp-controller="Map" asp-action="GetUserPolygonPoints" method="post">
        <div class="form-group">
            <label for="Address">Address</label>
            <input asp-for="Address" id="Address" />
        </div>
        <div class="form-group">
            <label for="FrequencyOfPoints">Frequency of points</label>
            <input asp-for="FrequencyOfPoints" type="number" id="FrequencyOfPoints" min="1" max="10">
        </div>
        <div class="form-group">
            <label for="FileName">Name of output file</label>
            <input asp-for="FileName" id="FileName" />
        </div>
        <input type="submit" value="Load" />
    </form>
</div>

@section Style {
    <style>
        body {
            background-color: #31f79e;
        }

        .container {
            display: inline-block;
            border-radius: 5px;
            background-color: #f2f2f2;
            padding: 20px;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        input {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-top: 6px;
            margin-bottom: 16px;
            resize: vertical;
        }

        input[type=submit] {
            background-color: #4CAF50;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        input[type=submit]:hover {
            background-color: #45a049;
        }
    </style>
}